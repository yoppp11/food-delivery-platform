generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

generator zod {
  provider                              = "zod-prisma-types"
  output                                = "../src/generated/zod"
  addInputTypeValidation                = "false"
  coerceDate                            = "true"
  createInputTypes                      = "true"
  createModelTypes                      = "true"
  createOptionalDefaultValuesTypes      = "true"
  createPartialTypes                    = "true"
  useDefaultValidators                  = "true"
  writeNullishInModelTypes              = "true"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String @unique @default(uuid())
  name          String
  address       String?
  phoneNumber   Int?
  userRole      UserRole[]
  locationId    String?

  @@map("users")
}

model Role {
  id          String @unique @default(uuid())
  name        String
  userRole    UserRole[]

  @@map("roles")
}

model UserRole {
  id        String @unique @default(uuid())
  roleId    String
  userId    String

  User      User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  Role      Role   @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@map("userRoles")
}

model Category {
  id            String @unique @default(uuid())
  name          String
  description   String?
  createdAt     DateTime @default(now())
  Menu          Menu[]

  @@map("categories")
}

model Menu {
  id            String @unique @default(uuid())
  name          String
  description   String
  categoryId    String
  Category      Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  menuSizes     MenuSize[]
  menuAddons    MenuAddon[]

  @@map("menus")
}

model MenuSize {
  id            String @unique @default(uuid())
  name          String
  price         Int
  isAvailable   Boolean
  menuId        String
  OrderItem     OrderItem[]
  Menu          Menu @relation(fields: [menuId], references: [id], onDelete: Cascade)

  @@map("menuSizes")
}

model MenuAddon {
  id                  String @unique @default(uuid())
  name                String
  price               Int
  isAvailable         Boolean
  menuId              String
  OrderItemAddon      OrderItemAddon[]
  Menu                Menu @relation(fields: [menuId], references: [id], onDelete: Cascade)

  @@map("menuAddons")
}

model Order {
  id                      String @unique @default(uuid())
  total                   Int
  customerName            String
  paymentStatus           String
  orderStatus             String
  specialInstruction      String
  items                   OrderItem[]

  @@map("orders")
}

model OrderItem {
  id            String @unique @default(ulid())
  menuSizeId    String
  quantity      Int
  total         Int
  orderId       String
  itemAddons    OrderItemAddon[]
  Order         Order @relation(fields: [orderId], references: [id], onDelete: Cascade)
  MenuSize      MenuSize @relation(fields: [menuSizeId], references: [id], onDelete: Cascade)

  @@map("orderItems")
}

model OrderItemAddon {
  id              String @unique @default(uuid())
  menuAddonId     String
  orderItemId     String
  quantity        Int
  total           Int
  OrderItem       OrderItem @relation(fields: [orderItemId], references: [id], onDelete: Cascade)
  MenuAddon       MenuAddon @relation(fields: [menuAddonId], references: [id], onDelete: Cascade)

  @@map("orderItemAddons")
}